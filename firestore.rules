rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is accessing their own document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Students Collection
    match /students/{userId} {
      allow read, write: if isOwner(userId);
      
      // Achievements Subcollection
      match /achievements/{achievementId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Academic Profiles Collection (includes subjects)
    // Note: The app sometimes writes to 'academic_profiles/{uid}' directly
    match /academic_profiles/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Study Plans Collection
    // Rules based on the 'studentId' field inside the document
    match /study_plans/{planId} {
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }

    // Focus Sessions Collection
    // Note: Uses 'studentId' field, not 'userId'
    match /focus_sessions/{sessionId} {
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        request.resource.data.studentId == request.auth.uid
      );
      allow delete: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }

    // Notes Collection
    match /notes/{noteId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Study Sets Collection
    match /study_sets/{studySetId} {
      allow create: if isAuthenticated() && request.resource.data.creatorId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.creatorId == request.auth.uid || 
        resource.data.isPrivate == false
      );
      allow update, delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // Flashcards Collection
    match /flashcards/{flashcardId} {
      allow create: if isAuthenticated() && request.resource.data.creatorId == request.auth.uid;
      allow read: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // Quizzes Collection
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin
    }

    // Quiz Attempts Collection
    match /quiz_attempts/{attemptId} {
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }

    // Users Collection and Subcollections
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Files Subcollection
      match /files/{fileId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
